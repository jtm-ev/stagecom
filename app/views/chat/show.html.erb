<div id="content">
  <div id="message_container" class="container">
    <div id="messages" class="ui one column grid">
      <% @messages.each do |message| %>
        <%= render partial: 'messages/message', locals: { message: message,  alignment: own_message(message)} %>
      <% end %>
    </div>
  </div>

  <form id="input">
    <div class="ui large input">
      <input type="text" data-behavior="room_speaker" placeholder="Nachricht">
    </div>
    <div id="button_pyro" class="ui button">Pyro</div>
  </form>

</div>

<div id="login" class="ui center aligned piled segment">
  <h1 class="ui header">JTM StageCom</h1>
  <div class="ui input">
    <input id="user_field" type="text" placeholder="Name" data-behavior="username">
  </div>
</div>
